{
  "dashboard": {
    "title": "Kubernetes Cluster Monitoring",
    "tags": ["kubernetes", "prometheus"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Cluster CPU Usage",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{container!=\"\"}[5m])) by (node)",
            "legendFormat": "{{node}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "Cluster Memory Usage",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes{container!=\"\"}) by (node)",
            "legendFormat": "{{node}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Pod CPU Usage by Namespace",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{container!=\"POD\", container!=\"\"}[5m])) by (namespace)",
            "legendFormat": "{{namespace}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Pod Memory Usage by Namespace",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes{container!=\"POD\", container!=\"\"}) by (namespace)",
            "legendFormat": "{{namespace}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "HTTP Request Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) by (service)",
            "legendFormat": "{{service}}"
          }
        ]
      },
      {
        "id": 6,
        "title": "HTTP Error Rate (5xx)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m])) by (service)",
            "legendFormat": "{{service}}"
          }
        ]
      },
      {
        "id": 7,
        "title": "Running Pods",
        "type": "stat",
        "gridPos": {"x": 0, "y": 24, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{phase=\"Running\"})"
          }
        ]
      },
      {
        "id": 8,
        "title": "Failed Pods",
        "type": "stat",
        "gridPos": {"x": 6, "y": 24, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{phase=\"Failed\"})"
          }
        ]
      },
      {
        "id": 9,
        "title": "Node Count",
        "type": "stat",
        "gridPos": {"x": 12, "y": 24, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "count(kube_node_info)"
          }
        ]
      },
      {
        "id": 10,
        "title": "Namespace Count",
        "type": "stat",
        "gridPos": {"x": 18, "y": 24, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "count(kube_namespace_created)"
          }
        ]
      }
    ]
  }
}
